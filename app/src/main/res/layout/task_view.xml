<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_background"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/description_background"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Images for Camera and Map -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Camera Image -->
                <ImageView
                    android:id="@+id/imageViewCamera"
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder_image"
                    android:visibility="gone" />

                <!-- Map Location Icon -->
                <ImageView
                    android:id="@+id/imageViewMap"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/placeholder_map"
                    android:visibility="gone" />

                <!-- Location Text -->
                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:text="Location: "
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Date Icon and Value -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <!-- Date Icon -->
                    <ImageView
                        android:id="@+id/imageViewDateIcon"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_date" />

                    <!-- Date Value -->
                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/date_background"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Time Icon and Value -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <!-- Time Icon -->
                    <ImageView
                        android:id="@+id/imageViewTimeIcon"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_time" />

                    <!-- Time Value -->
                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/time_background"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Reminders Icon and Value -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <!-- Reminders Icon -->
                    <ImageView
                        android:id="@+id/imageViewRemindersIcon"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_reminder" />

                    <!-- Reminders Value -->
                    <TextView
                        android:id="@+id/textViewNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/time_background"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <!-- Progress bar for task priority-->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <!-- Done button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAlignment="center">

                <!-- Done Button for completed task-->
                <Button
                    android:id="@+id/completeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Done ?"
                    android:textSize="10sp" />


                <!-- Icons for notifications, check, pending, and overdue statuses -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <!-- Number of Notifications -->
                    <TextView
                        android:id="@+id/textViewNotificationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!-- Notification Icon -->
                    <ImageView
                        android:id="@+id/imageButtonNotification"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_notification"
                        android:visibility="gone" />

                    <!-- Check Icon -->
                    <ImageView
                        android:id="@+id/imageButtonCheck"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_check" />

                    <!-- Pending Icon -->
                    <ImageView
                        android:id="@+id/imageButtonPending"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pending" />

                    <!-- Overdue Icon -->
                    <ImageView
                        android:id="@+id/imageButtonOverdue"
                        android:layout_width="30dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_overdue" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Lottie AnimationView for displaying animations -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="animation.json" />


</androidx.cardview.widget.CardView>
